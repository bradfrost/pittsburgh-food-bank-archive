{{# sectionBlock }}
&lt;section class=&quot;section section-block&quot;&gt;
	&lt;div class=&quot;section-body&quot;&gt;
		&lt;h2 class=&quot;section-title&quot;&gt;{{ headline.short }}&lt;/h2&gt;
		&lt;p class=&quot;section-desc&quot;&gt;{{ excerpt.short }}&lt;/p&gt;
		&lt;ul class=&quot;text-list&quot;&gt;
			{{# textList }}
			&lt;li&gt;&lt;a href=&quot;{{ url }}&quot;&gt;{{ label }}&lt;/a&gt;&lt;/li&gt;
			{{/ textList }}
		&lt;/ul&gt;
	&lt;/div&gt;
	&lt;div class=&quot;section-img&quot;&gt;
		{{&gt; atoms-hero }}
	&lt;/div&gt;
&lt;/section&gt;
{{/ sectionBlock }}